<view class="container">
  <form bindsubmit='formSubmit' bindreset='formReset'>
    <view class='typePickerView'>
      <text class='pickerText'>请选择您要提交的tip的种类：</text>
      <picker class='typePicker' bindchange='bindPickerChange' range='{{typeArr}}' name='picker' value='{{pickerIndex}}'>
        <view class="picker">
          <input value="{{typeArr[0]}}" class='pickerInput'></input>
        </view>
      </picker>
    </view>
    <view class='tipContentView'>
      <textarea class='tipContent' placeholder='请输入tip的内容' maxlength='-1' name='input'>
      </textarea>
    </view>
    <view class='mediaSelectionView'>
      <view class='picSelectionView'>
        <text class='picSelectionText' bindtap='selectPics'>选择图片</text>
        <block class='imageView' wx:if='{{isPicSelected}}' wx:for='{{picSrc}}'>
          <image src='{{item}}'></image>
        </block>
      </view>
      <view class='videoSelectionView'>
        <text class='videoSelectionText' bindtap='selectVideo'>选择视频</text>
        <video src='{{videoSrc}}' wx:if='{{isVideoSelected}}'></video>
      </view>
    </view>
    <view class='lcContainer'>
      <text class='currentLocation'>当前位置：{{position.name}}</text>
      <map class='locationChooser' bindtap='bindChooseLocation' longitude='{{position.longitude}}' latitude='{{position.latitude}}' scale='16' show-location='{{true}}'></map>
    </view>
    <view class="btn-area">
      <button formType="submit" class='btn'>提交</button>
      <button formType="reset" class='btn'>重置</button>
    </view>
  </form>
</view>
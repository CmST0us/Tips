<view class='container'>
  <view class="swiper-tab">
    <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">附近的tips</view>
    <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">我的关注</view>
    <view class="tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">随机推荐</view>
  </view>

  <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange" style='height:{{swiperHeight}}px'>

    <swiper-item>
      <block wx:for="{{tipData}}" wx:for-item="item" wx:for-index="index" wx:key="id">
        <view class='tipContainer' bindtap='showDetail' data-tip='{{item}}'style="height:{{listRowHeight}}px">
          <text class='tipType'>{{index}}tip种类：{{item.tipType}} </text>
          <text class='tipContent'>tip内容：{{item.content}}</text>
          <button class='followBtn' catchtap='catchFollow' data-tip='{{item}}' >关注</button>
        </view>
      </block>
    </swiper-item>

    <swiper-item>
      <block wx:for="{{myFollowData}}" wx:for-item="item" wx:for-index="index" wx:key="id">
        <view class='follow-row' bindtap='showDetail' data-tip='{{item}}' style="height:{{listRowHeight}}px">
          <text class='tipType'>{{index}}tip种类：{{item.tipType}} </text>
          <text class='tipContent'>tip内容：{{item.content}}</text>
        </view>
      </block>
    </swiper-item>

    <swiper-item>

      <!--第一页已经验证的tip  -->
      <block wx:for="{{recommendTipData}}" wx:for-item="item" wx:for-index="index" wx:key="id">
        <view class='recommend-row' bindtap='showDetail' data-tip='{{item}}'style="height:{{listRowHeight}}px">
          <text class='tipType'>{{index}}tip种类：{{item.tipType}} </text>
          <text class='tipContent'>tip内容：{{item.content}}</text>
          <button class='followBtn' catchtap='catchFollow' data-tip='{{item}}' >关注</button>
        </view>
      </block>

    </swiper-item>
  </swiper>
</view>